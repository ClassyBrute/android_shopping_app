<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndroidShopingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/metropolis_regular</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="popupMenuStyle">@style/PopupStyle</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="PopupStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_dialog_all</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupText</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupText</item>
    </style>

<!--   TODO not working -->
    <style name="PopupText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_5</item>
    </style>

    <style name="TextFilter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_21</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_8</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/dp_4</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">@dimen/dp_22</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:background">@drawable/selector_color</item>
        <item name="android:button">@drawable/color_select</item>
    </style>

    <style name="ButtonDetails">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_7</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="icon">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">end</item>
        <item name="iconSize">@dimen/dp_9</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_1</item>
        <item name="android:insetBottom">@dimen/dp_1</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_4</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
    </style>

    <style name="ButtonFilters">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_7</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_1</item>
        <item name="android:insetBottom">@dimen/dp_1</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_12</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chip_choice</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">@dimen/dp_3</item>
        <item name="android:checked">true</item>
        <item name="android:minWidth">@dimen/dp_50</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_8</item>
    </style>

    <style name="TextLoginTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_7</item>
        <item name="android:layout_marginTop">@dimen/dp_17</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonLogin">
        <item name="backgroundTint">@color/red</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/sp_7</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_12</item>
    </style>

    <style name="ButtonHome">
        <item name="backgroundTint">@color/red</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_7</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_12</item>
    </style>

    <style name="ButtonSocial">
        <item name="android:layout_width">@dimen/dp_46</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_1</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="cornerRadius">@dimen/dp_12</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp_0</item>
        <item name="iconTintMode">multiply</item>
    </style>

    <style name="ButtonFavorite">
        <item name="android:layout_width">@dimen/dp_18</item>
        <item name="android:layout_height">@dimen/dp_18</item>
        <item name="icon">@drawable/selector_favorite_item</item>
        <item name="iconTint">@drawable/selector_bottom_navigation</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="iconPadding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/dp_18</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="ButtonBag">
        <item name="android:layout_width">@dimen/dp_18</item>
        <item name="android:layout_height">@dimen/dp_18</item>
        <item name="icon">@drawable/ic_baseline_shopping_bag_24</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="android:padding">@dimen/dp_0</item>
        <item name="iconPadding">@dimen/dp_0</item>
        <item name="android:insetTop">@dimen/dp_0</item>
        <item name="android:insetLeft">@dimen/dp_0</item>
        <item name="android:insetRight">@dimen/dp_0</item>
        <item name="android:insetBottom">@dimen/dp_0</item>
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">@dimen/dp_18</item>
        <item name="android:checkable">true</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/CustomTextInputLayoutThemeOverlay</item>
        <item name="shapeAppearanceOverlay">@style/CustomTextInputLayoutShapeAppearanceOverlay</item>
        <item name="textInputLayoutNormalSelectorDrawable">@drawable/selector_text_field_background</item>
        <item name="textInputLayoutErrorDrawable">@drawable/text_field_background_error</item>
        <item name="boxCollapsedPaddingTop">14dp</item>
        <item name="android:textSize">@dimen/sp_7</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">@color/grey</item>
        <item name="errorIconDrawable">@drawable/ic_baseline_close_24</item>
        <item name="endIconDrawable">@drawable/ic_baseline_check_24</item>
        <item name="endIconTint">@color/green</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="CustomTextInputLayoutThemeOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="editTextStyle">@style/CustomTextInputLayoutEditTextStyle</item>
    </style>

    <style name="CustomTextInputLayoutEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:paddingBottom">@dimen/dp_1</item>
        <item name="android:textSize">@dimen/sp_7</item>
    </style>

    <style name="CustomTextInputLayoutShapeAppearanceOverlay" parent="">
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
    </style>
</resources>