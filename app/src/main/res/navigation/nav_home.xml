<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	app:startDestination="@id/homeFragment"
	android:id="@+id/nav_home">

	<fragment
		android:id="@+id/homeFragment"
		android:name="com.gd.intership.hdziedziura.androidshopingapp.presentation.ui.HomeFragment"
		tools:layout="@layout/fragment_home">

		<action
			android:id="@+id/action_homeFragment_to_productDetailsFragment"
			app:destination="@id/nav_product_details"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

		<action
			android:id="@+id/action_homeFragment_to_shopProductListFragment"
			app:destination="@id/nav_product_list"
			app:enterAnim="@anim/nav_default_enter_anim"
			app:exitAnim="@anim/nav_default_exit_anim"
			app:popEnterAnim="@anim/nav_default_pop_enter_anim"
			app:popExitAnim="@anim/nav_default_pop_exit_anim"/>

		<action android:id="@+id/action_home_auth"
			app:destination="@id/nav_auth"
			app:popUpTo="@id/homeFragment" />

	</fragment>

</navigation>